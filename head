<!-- saving UTM params -->
<script>
  var queryString = window.location.search;
  var URLSearchParams_wb = new URLSearchParams(queryString);

  const utmParameters = ["utm_source", "utm_medium", "utm_campaign"];
  const paramValues = {}

  for (const utm_element of utmParameters) {
    if(URLSearchParams_wb.has(utm_element)){
      paramValues[utm_element] = URLSearchParams_wb.get(utm_element)
    }
  }

  if (Object.keys(paramValues).length > 0) {
    for (utm_element of utmParameters) {
      Cookies.remove(utm_element);
      if (paramValues[utm_element]) {
        Cookies.set(utm_element, paramValues[utm_element], { expires: 1 });
      }
    }
  }
</script>


